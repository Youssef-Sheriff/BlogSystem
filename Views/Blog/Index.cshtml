<!-- Index.cshtml -->
@model IEnumerable<Blog_System.Models.BlogPost>
<div class="container mt-5">
    <h1 class="mb-4">Blog Posts</h1>
    <a asp-action="Create" class="btn btn-primary mb-3">Create New Post</a>
    <div class="row">
        @foreach (var post in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@post.Title</h5>
                        <p class="card-text text-truncate">@post.Content</p>
                        <a asp-action="Details" asp-route-id="@post.Id" class="btn btn-info btn-sm">View</a>
                        <a asp-action="Edit" asp-route-id="@post.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@post.Id" class="btn btn-danger btn-sm">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
